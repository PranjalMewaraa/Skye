<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".AddShortsActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ff"
        android:paddingHorizontal="16dp"
        android:layout_margin="16dp"
        android:hint="Enter Caption"
        android:textColorHint="@color/white"
        android:id="@+id/VideoCaptionEditText"
        android:textColor="@color/white"
        android:layout_above="@+id/VideoUpload"/>


    <VideoView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:id="@+id/VideoUpload"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/upload"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:tint="@color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Upload Text"
        android:id="@+id/VideoUploadbtn"
        android:backgroundTint="@color/PButton"
        android:layout_below="@+id/VideoUpload"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>