<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginActivity">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardd"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="32dp"
            android:padding="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/locCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="16dp"
                    android:paddingBottom="16dp"
                    android:text="Login to your Skye Account"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/EmailLable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/locCardTitle"
                    android:paddingLeft="16dp"
                    android:textColor="@color/black"
                    android:text="Email ID" />

                <EditText
                    android:id="@+id/EmailLogininput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/EmailLable"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textColorHint="#A7A7A7"
                    android:hint="xyz@gmail.com"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/PassLable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/EmailLogininput"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/black"
                    android:text="Password" />

                <EditText
                    android:id="@+id/passwordInputLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/PassLable"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:hint="Password"
                    android:textColorHint="#A7A7A7"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/passrec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/passwordInputLogin"
                    android:layout_marginBottom="20dp"
                    android:padding="16dp"
                    android:textColor="@color/SText"
                    android:text="Forgot Password?"
                    android:textSize="15dp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/newaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardd"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="64dp"
        android:text="Don't have an account? JOIN NOW"
        android:textSize="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="64dp"
        android:backgroundTint="@color/PButton"
        android:padding="16dp"
        android:onClick="Logg"
        android:text="Log in" />


</RelativeLayout>