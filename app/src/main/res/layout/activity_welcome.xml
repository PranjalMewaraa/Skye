<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="wrap_content">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/my_pager"
        android:layout_width="match_parent"
        android:layout_height="526dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        tools:ignore="SpeakableTextPresentCheck" />


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/my_pager"
    android:layout_centerHorizontal="true">

    <Button
        android:id="@+id/SignupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/SButton"
        android:padding="16dp"
        android:onClick="RegisterPage"
        android:text="Let's Start New" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@id/SignupButton"
        android:backgroundTint="@color/PButton"
        android:padding="16dp"
        android:onClick="LoginPage"
        android:text="Log in" />

</RelativeLayout>





</RelativeLayout>